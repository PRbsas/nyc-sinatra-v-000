<h2 class="f2"><a href="/figures/<%= @figure.id %>"><%= @figure.name %></a></h2>

<h4 class="f4">Titles</h4>
<% Title.all.each do |title| %>
  <div class="pa1 lh-copy">
    <p class="f4 fw6 db black link hover-hot-pink"><%= title.name %></p>
  </div>
<% end %>

<h4 class="f4">Landmarks</h4>
<% Landmark.all.each do |landmark| %>
  <div class="pa1 lh-copy">
    <p class="f4 fw6 db black link hover-hot-pink"><%= landmark.name %></p>
  </div>
<% end %>
